<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DeimosEvents" parent="Theme.Material3.DayNight">
        <item name="toolbarStyle">@style/header</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/title_colour</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/background_colour</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/title_colour</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowOptOutEdgeToEdgeEnforcement" tools:targetApi="35">true</item>

        <item name="actionBarSize">100dp</item>
    </style>

    <style name="fab_shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="Theme.DeimosEvents.Dialog" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="background">@android:color/transparent</item>
    </style>

    <style name="header" parent="@style/Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/text_colour</item>
        <item name="android:background">@color/title_colour</item>
        <item name="android:height">15dp</item>
        <item name="android:minHeight">15dp</item>
    </style>

</resources>