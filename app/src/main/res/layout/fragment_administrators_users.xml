<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggle_user_filter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:singleSelection="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/toggle_users_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/toggle_users_entrants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrants" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/toggle_users_organizers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organizers" />

    </com.google.android.material.button.MaterialButtonToggleGroup>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_admin_users"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/toggle_user_filter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>