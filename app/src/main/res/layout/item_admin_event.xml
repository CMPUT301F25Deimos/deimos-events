<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <!-- Row like your screenshot: small image on left, text on right -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv_admin_event_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_admin_event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event title"
                android:textStyle="bold"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tv_admin_event_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:paddingTop="4dp"/>

            <TextView
                android:id="@+id/tv_admin_event_meta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date • Cap • Location"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:paddingTop="2dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
